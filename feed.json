---
layout: null
---

{
    "version": "https://jsonfeed.org/version/1.1",
    "title": "{{ site.title }}",
    "home_page_url": "{{ site.baseurl }}",
    "feed_url": "{{ site.baseurl }}/feed.json",
    "description": "JSON Feed - {{ site.title }} - {{ site.tagline }}",
    "icon": "{{ site.baseurl }}/logo.png",
    "favicon": "{{ site.baseurl }}/favicon.ico",
    "expired": false,
    "authors": {
        "name": "{{ site.author.name }}",
        "url": "{{ site.baseurl }}"
    },
    "items": [
        {% for post in site.posts %}
        {
            "id": "{{ post.url | absolute_url | sha1 }}",
            "url": "{{ site.baseurl }}{{ post.url }}",
            "title": {{ post.title | jsonify }},
            "date_published": "{{ post.date | date_to_xmlschema }}",
            {% if post.date-updated %}
            "date_modified": "{{ post.date-updated | date_to_xmlschema }}",
            {% else %}
            "date_modified": "{{ post.date | date_to_xmlschema }}",
            {% endif %}
            "author": {
                "name": "{{ site.author.name }}",
                "url": "{{ site.baseurl }}"
            },
            "summary": {{ post.excerpt | jsonify }},
            "content_html": {{ post.content | jsonify }},
            "tags": {{ post.tags | jsonify }},
            "image": "{{ post.image | absolute_url }}"
        }{% if forloop.last == false %},{% endif %}
        {% endfor %}
    ]
}