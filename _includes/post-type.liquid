{% if post %}
	{% assign raw = post.content | strip_html %}
	{% assign override = post.override %}
{% else %}
	{% assign raw = page.content | strip_html %}
	{% assign override = page.override %}
{% endif %}

{% if override or raw.size > site.micro_length %}
	{% assign is_micro_post = false %}
{% else %}
	{% assign is_micro_post = true %}
{% endif %}
